{
    "version": 2,
    "functions": {
        "api/**/*.py": {
            "excludeFiles": "{index.html,style.css,script.js,assets/**,static/**,venv/**,**/__pycache__/**}"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}